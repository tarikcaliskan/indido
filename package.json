	"license": "MIT",
	"dependencies": {
		"body-parser": "^1.19.0",
		"concurrently": "^5.1.0",
		"express": "^4.17.1",
		"mongoose": "^5.9.4",
		"nodemon": "^2.0.2"
	}
}
